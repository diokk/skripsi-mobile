<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.ditaoktaria.classic.EditAccount">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="My account"
        android:textColor="#FFFFFF"
        android:drawableLeft="@android:drawable/ic_menu_agenda"
        android:textSize="8dp"
        android:background="#4e4e4e"
        android:id="@+id/bt_account"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Materials"
        android:id="@+id/bt_materials"
        android:background="#ff8914"
        android:layout_below="@+id/bt_account"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/bt_materials"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fce2d4"
        android:id="@+id/bg2_materials">

        <Button
            android:layout_width="68dp"
            android:layout_height="35dp"
            android:text="save"
            android:textSize="8dp"
            android:id="@+id/bt_add_folder"
            android:layout_gravity="right|bottom"
            android:background="#28b6e5"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"
            android:drawableLeft="@android:drawable/ic_menu_save"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Dita Oktaria"
            android:ems="10"
            android:id="@+id/fullName"
            android:layout_gravity="center_horizontal|top" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/edit_email"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal|top"
            android:text="dita22@ub.ac.id" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_password"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal|top"
            android:text="Password" />


    </FrameLayout>

</RelativeLayout>
